/* header-切换栏目 */

.ListofGoods {
  background-color: #f0f0f0;
}

.header_column {
  width: 100%;
  position: fixed;
  z-index: 2;
  top: 0;
  left: 0;
  font-size: 30rpx;
  background-color: #fff;
  box-shadow: 0rpx 0rpx 10rpx 0rpx rgba(0, 0, 0, 0.5);
}

.header_column view {
  line-height: 75rpx;
}

.header_column text, .apps-o {
  display: block;
  width: 50%;
  text-align: right;
  float: left;
}

.arrow-dropdown {
  padding-left: 3%;
  width: 45%;
  float: left;
  color: #eee;
}

.arrow-dropdown .arrow-dropup {
  display: block;
  height: 15rpx;
  margin-top: -6rpx;
}

.ellipsis4, .ellipsis5 {
  color: #eee;
}

.ellipsis, .ellipsis2, .ellipsis3 {
  color: #969696;
}

.unellipsis, .unellipsis .arrow-dropdown, .unellipsis2,
.unellipsis2 .arrow-dropdown, .unellipsis3, .unellipsis4, .unellipsis5 {
  color: red;
}

/* content */

.ListofGoods_cont {
  width: 100%;
  background-color: #fff;
  padding-top: 60rpx;
}

.ListofGoods_cont scroll-view {
  width: 94%;
  padding: 50rpx 3% 0 3%;
}

/* 隐藏滚动条 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.res {
  width: 100%;
  height: 238rpx;
}

.ListofGoods_cont_img {
  width: 30%;
  float: left;
}

.ListofGoods_cont_img image {
  width: 100%;
  height: 220rpx;
}

.ListofGoods_content {
  width: 65%;
  float: right;
  text-align: left;
  font-size: 30rpx;
}

.ListofGoods_content view:nth-of-type(1) text {
  display: block;
  height: 110rpx;
  /* padding-bottom: 80rpx; */
}

/* 促 爆红星 */

#burst-12 {
  width: 30rpx;
  height: 30rpx;
  background-color: red;
  position: relative;
  text-align: center;
  float: left;
  margin-right: 10rpx;
}

#burst-12:before, #burst-12:after {
  width: 30rpx;
  height: 30rpx;
  top: 0;
  left: 0;
  background-color: red;
  position: absolute;
  content: "";
}

#burst-12:before {
  transform: rotate(30deg);
  -webkit-transform: rotate(30deg);
  -ms-transform: rotate(30deg);
  -moz-transform: rotate(30deg);
  -o-transform: rotate(30deg);
}

#burst-12:after {
  transform: rotate(60deg);
  -webkit-transform: rotate(60deg);
  -ms-transform: rotate(60deg);
  -moz-transform: rotate(60deg);
  -o-transform: rotate(60deg);
}

#burst-12 text {
  width: 100%;
  text-align: center;
  position: relative;
  display: block;
  line-height: 30rpx;
  font-size: 20rpx;
  color: #fff;
  z-index: 1;
}

.ListofGoods_content view:nth-of-type(2) text {
  float: left;
  color: red;
}

.ListofGoods_content view:nth-of-type(2) text:nth-of-type(2) {
  text-decoration: line-through;
  line-height: 50rpx;
  margin-left: 15rpx;
  font-size: 20rpx;
  color: #969696;
}

.ListofGoods_content view:nth-of-type(3) {
  float: left;
  width: 100%;
  color: #969696;
}

.ListofGoods_content view:nth-of-type(3) text:nth-of-type(2) {
  font-size: 25rpx;
}

.ListofGoods_content view:nth-of-type(3) i-icon {
  color: red;
  float: right;
  height: 55rpx;
  margin-right: 15rpx;
}

/* content样式2 */

.layout2 {
  width: 100%;
  padding: 65rpx 0 0 0;
  background-color: #f0f0f0;
}
.layout2 scroll-view{
  width: 100%;
  padding: 30rpx 0;
}
.layout2 .res {
  background-color: #fff;
  width: 48%;
  float: left;
  height: 500rpx;
  margin-bottom: 30rpx;
}

.layout2 .res:nth-of-type(2n) {
  margin-left: 4%;
}

.layout2 .res .ListofGoods_cont_img {
  width: 100%;
  height: 320rpx;
}

.layout2 .res .ListofGoods_cont_img image {
  height: 320rpx;
}

.layout2 .res .ListofGoods_content {
  width: 96%;
  padding: 10rpx 2%;
  display: unset;
}

.layout2 .res .ListofGoods_content view:nth-of-type(1) {
  height: 60rpx;
}

.layout2 .res .ListofGoods_content view:nth-of-type(1) text {
  height: 38rpx;
  display: unset;
  overflow: hidden;
  text-overflow: ellipsis;
  text-overflow: -o-ellipsis-lastline;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

