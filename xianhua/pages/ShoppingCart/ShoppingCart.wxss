page {
  height: 100%;
}

.ShoppingCart {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

/* 购物车为空 */

.empty {
  text-align: center;
}

.empty image {
  width: 200rpx;
  height: 200rpx;
  margin: 80rpx auto;
}

.empty text {
  color: #b3b3b3;
  display: block;
}

/* 已加购商品 */

.AdditionalPurchases {
  margin: rpx 0;
  width: 100%;
  background-color: #fff;
}

.AdditionalPurchases van-checkbox-group {
  background-color: #f5f5f5;
  width: 100%;
  height: 100%;
  display: block;
}

.AdditionalPurchases van-checkbox {
  margin: 20rpx 0;
  width: 92%;
  padding: 0 4%;
  display: block;
  height: 100%;
  background-color: #fff;
}

.AdditionalPurchases .van-checkbox__icon {
  margin-top: 200%;
}

.Additional_list {
  border-left: 5rpx dashed #f0f0f0;
  border-right: 5rpx dashed #f0f0f0;
  padding: 30rpx 0 80rpx 0;
  width: 530rpx;
  height: 100%;
  float: left;
  background-color: #fff;
}

.AdditionalCard_image {
  display: block;
  width: 25%;
  float: left;
}

.AdditionalCard_image image {
  width: 90%;
  margin-left: 5%;
  height: 130rpx;
  display: block;
}

.AdditionalCard_information {
  display: block;
  width: 72%;
  padding-right: 3%;
  float: left;
}

.AdditionalCard_information text {
  width: 100%;
  font-size: 30rpx;
  color: #969696;
}

.AdditionalCard_information text {
  overflow: hidden;
  text-overflow: ellipsis;
  text-overflow: -o-ellipsis-lastline;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.AdditionalCard_information text:nth-of-type(2) {
  display: block;
  font-size: 35rpx;
  color: #f3514e;
  margin: 20rpx 0;
}

.AdditionalCard_information van-stepper {
  float: right;
}

/* 删除按钮 */

.Additional_del {
  float: right;
  padding-left: 20rpx;
  width: 50rpx;
  background-color: #fff;
  height: 100%;
}

.Additional_del i-icon {
  display: block;
  margin-top: 200%;
  color: #969696;
}

