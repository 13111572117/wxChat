/* pages/Order/Order.wxss */

page {
  height: 100%;
  background-color: #f5f5f5;
}

.cardbag {
  text-align: center;
  width: 100%;
  height: 100%;
}

.cardbag image {
  margin: 150rpx 0 100rpx;
  width: 280rpx;
  height: 250rpx;
}

.cardbag text {
  display: block;
  font-size: 38rpx;
  color: #969696;
}
/* 订单列表 */

.orderslist{
  width: 92%;
  height: 100%;
  padding: 5rpx 4% 10rpx 4%;
  background-color: #fff;
}
.fengexian{
  height: 2rpx;
  width: 100%;
  border-bottom: 2rpx solid #f0f0f0;
}
.orderslist1 {
  line-height:70rpx;
}
.orderslist1 i-col:nth-of-type(1) {
  font-size: 30rpx;
  color: #969696;
}
.orderslist1 i-col:nth-of-type(2) {
  font-size: 28rpx;
  color: #f3514e;
  line-height: 50rpx;
  text-align: right;
}
.orderslist2 image{
  width: 90%;
  height: 150rpx;
}
.orderslist2 text{
  font-size: 35rpx;
  color: #333;
  margin-top: 30rpx;
  display: block;
}
.orderslist3 text{
  font-size: 32rpx;
  color: #f3514e;
}
.orderslist3 i-icon{
  float: right;
}
