}

.header_viode text {
  display: block;
  width: 60%;
  z-index: 2;
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  font-size: 30rpx;
  color: #fff;
}

.header_viode text:nth-of-type(2) {
  color: #969696;
  margin-left: 130rpx;
}

.header_viode text:nth-of-type(3) {
  text-align: center;
  top: 250rpx;
  display: block;
  width: 95%;
  font-size: 50rpx;
  color: #fff;
  /* 字体间距 */
  letter-spacing: 25rpx;
}

.header_viode text:nth-of-type(4) {
  text-align: center;
  top: 350rpx;
  display: block;
  width: 95%;
  font-size: 30rpx;
  color: #fff;
  /* 字体间距 */
  letter-spacing: 30rpx;
}

.header_viode span {
  position: absolute;
  z-index: 2;
  top: 20rpx;
  right: 30rpx;
  font-size: 30rpx;
  color: #724204;
  border-radius: 45rpx;
  padding: 10rpx 30rpx;
  background-color: rgb(253, 169, 13);
}

.header_viode image {
  position: relative;
  left: -60%;
  width: 250%;
  height: 980rpx;
  z-index: 1;
}

.viode_zhezhao image {
  width: 100%;
  height: 980rpx;
  z-index: 1;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.FilmTelevision {
  width: 100%;
  left: 0;
  height: 370rpx;
  position: absolute;
  padding: 30rpx 5%;
  margin-top: -500rpx;
  z-index: 2;
}

.FilmTelevision image {
  z-index: 2;
  float: left;
  width: 220rpx;
  height: 300rpx;
}

