.Television_cont {
  padding: 0 5%;
  position: absolute;
  z-index: 1;
  margin-top: -150rpx;
  width: 90%;
}

.Television_cont text {
  display: block;
  color: #b3b3b3;
  font-size: 28rpx;
}

.ColumnCont {
  float: left;
  margin-right: 3%;
  width: 30%;
}

.ColumnCont .ColumnCont_number {
  width: 100%;
  padding: 20rpx;
  color: #969696;
}

.ColumnCont .ColumnCont_number view {
  position: absolute;
  margin-top: -25rpx;
  width: 0;
  height: 0;
  border: 15px solid;
  border-top: none;
  border-color: #eee;
  border-left-color: transparent;
  border-right: 0px solid #eee;
  border-bottom: 30rpx solid #eee;
  border-radius: 15rpx 0 0 15rpx;
}

.ColumnCont_img span {
  text-align: center;
  line-height: 60rpx;
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  border-radius: 5rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
}

.ColumnCont_img image {
  border-radius: 10rpx;
  width: 100%;
  height: 300rpx;
}

.ColumnCont_img .name {
  display: block;
  font-size: 25rpx;
  color: #333;
}

.ColumnCont_img i-rate {
  width: 70%;
  line-height: 30rpx;
  float: left;
}

.ColumnCont_img .number {
  display: block;
  width: 30%;
  font-size: 28rpx;
  line-height: 50rpx;
  float: left;
}

