/* 头部登录 */
.header{
  width: 100%;
  height: 390rpx;
  /* background-color: #42c02e; */
  /* background: url('../../images/beijing.png'); */
}
.user_photo{
  text-align: center;
  padding-top: 80rpx;
}
.user_photo image:nth-of-type(1){
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 390rpx;
}
.user_photo image:nth-of-type(2){
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_photo text{
  display: block;
  color: #fff;
  font-size: 35rpx;
  font-weight: 700;
}
.user_photo button{
  position: absolute;
  right: 5%;
  line-height: 60rpx;
  font-size: 35rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0);
  width:135rpx;
  padding: 0;
  height: 60rpx;
  border: 2rpx solid #fff;
  margin-top: 20rpx;
}
.user_photo i-icon{
  font-size: 38rpx;
  font-weight: 600;
}
/* 我的书影音 */
.cont_title {
  padding:20rpx 5% 20rpx 4%;
}
.cont_title text{
  font-size: 38rpx;
  font-weight: 500;
  color: #333333;
}
.cont_title navigator{
  font-size: 30rpx;
  color: #969696;
  float: right
}
/* 观影分析内容 */
.Contents{
  padding: 0 5%;
}
.fengexian{
  float: right;
  width: 80%;
  margin-right: 5%;
  border: 2rpx solid #eeeeee;
}
.Contents .cont_Icon i-icon{
  color: #6695d3;
  line-height: 160rpx;
}
.Contents .cont_Icon .reading{
  color: #42c02e;
}
.Contents .cont_Icon .music{
  color: darkorange;
}
.Contents .Analysis{
  padding-left:20rpx;
  font-size: 30rpx;
  line-height: 60rpx;
}
.Contents .Analysis text:nth-of-type(1){
  color: #333333;
  display: block;
}
.Contents .Analysis text:nth-of-type(2){
  float: left;
  font-size: 45rpx;
  color: #969696;
  margin-right: 20rpx;
}
.Contents .Analysis text:nth-of-type(3){
  color: #969696;
  display: block;
  margin-top: 5rpx;
}
.Contents .sign{
  text-align: right;
  font-size: 30rpx;
  color: #969696;
}
.Contents .sign text:nth-of-type(1){
  display: block;
  margin-top: 35rpx;
}
.Contents .open button{
  font-size: 30rpx;
  color: #777777;
  font-weight: 700;
  padding: 0;
  width: 100%;
  line-height: 50rpx;
  margin-top: 60rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.733);
  background-color: rgba(248, 248, 248, 0.733);
}
.cont_moro {
  padding-top: 60rpx;
}
.cont_moro i-col{
  display: block;
  font-size: 30rpx;
  color: #777777;
}
.Record{
  padding: 0 5%;
  width: 90%;
  background-color: #f7f7f7;
  height: 80rpx;
}
.Record .Record_title text{
  font-size: 28rpx;
  color: #969696;
  display: block;
  line-height: 80rpx;
  width: 50%;
  float: left;
}
.Record .Record_title image{
  width: 50%;
  float: left;
  height: 80rpx;
}