/* 搜索框 */
.search {
  padding-bottom: 20rpx;
  width: 100%;
  background-color: #42c02e;
}

.search input {
  width: 90%;
  padding: 10rpx 0;
  margin-left: 5%;
  border-radius: 10rpx;
  background-color: #fff;
  border: 1rpx solid #42c02e;
  text-align: center;
}
/* 影院热映 */
.Cinema{
  float: left;
  width: 100%;
  height: 70rpx;
  /* background: #f90; */
  margin: 20rpx auto 0;
  font-family: "黑体";
}
.Cinema text{
  float: left;
  margin-left: 5%;
  font-size: 36rpx;
  color: #333333
}
.Cinema navigator text{
  float: right;
  color: #67ba62;
  margin-right: 5%;
  font-size: 33rpx;
}
/* 图片滑动 */
.uploadWrap {
  float: left;
  display: flex;
  flex-direction: row;
  height: 380rpx;
}
.upload_Item {
  float: left;
  width: 200rpx;
  height: 380rpx;
  line-height: 40rpx;
  text-align: center;
}
.upload_Item_img {
  float: left;
  width: 170rpx;
  height: 250rpx;
  margin: 0 0 0 20rpx;
  border-radius: 10rpx;
}
.upload_Item text {
  display: inline-block;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  width: 160rpx;
  margin-top: 26rpx;
  font-size: 30rpx; 
  text-align: left;
}
.upload_Item i-rate{
  width: 70%;
  float: left;
  margin-left: 10%;
}
.upload_Item i-cell text{
  margin-top: 10rpx;
  width: 20%;
  float: right;
  font-size: 25rpx;
  color: #969696;
}
.musics image{
  height: 170rpx;
}